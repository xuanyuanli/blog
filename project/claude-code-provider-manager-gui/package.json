{
  "name": "claude-code-provider-manager-gui",
  "version": "0.1.0",
  "description": "Claude Code Provider Manager GUI - 跨平台的 Claude API 提供商管理桌面应用",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite --config vite.config.dev.ts",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "preview": "vite preview",
    "electron": "electron dist/main.js",
    "electron:dev": "concurrently \"npm run dev:main\" \"wait-on http://localhost:1420 && electron dist/main.js\"",
    "dist": "npm run build && electron-builder",
    "dist:dir": "npm run build && electron-builder --dir",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/(components|services|utils|contexts)",
    "test:unit:core": "jest --testPathPattern=tests/(services|contexts)",
    "test:unit:ui": "jest --testPathPattern=tests/components",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:security": "jest --testPathPattern=tests/security",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:compatibility": "jest --testPathPattern=tests/compatibility",
    "test:platform:Windows": "jest --testPathPattern=tests/compatibility/windows",
    "test:platform:macOS": "jest --testPathPattern=tests/compatibility/macos",
    "test:platform:Linux": "jest --testPathPattern=tests/compatibility/linux",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:visual": "playwright test --config=playwright.visual.config.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:unit:core && npm run lint && npm run type-check",
    "security:scan": "npm audit && echo 'Security scan completed'",
    "performance:benchmark": "jest --testPathPattern=tests/performance/benchmarks",
    "performance:monitor": "jest --testPathPattern=tests/performance/monitoring",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "validate": "node scripts/validate-project.js",
    "setup": "npm install && npm run validate",
    "clean": "rm -rf dist node_modules/.cache && npm run build",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\""
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.1.0",
    "@headlessui/react": "^1.7.17",
    "react-hook-form": "^7.48.2",
    "zod": "^3.22.4",
    "@hookform/resolvers": "^3.3.2",
    "react-hot-toast": "^2.4.1",
    "framer-motion": "^10.16.16",
    "electron": "^28.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-builder": "^24.6.4",
    "keytar": "^7.9.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.8",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "prettier": "^3.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "@types/node": "^20.10.5",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "jest-environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}